{
  "linter": {
    "enabled": true,
    "ignore": ["dist"],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": ["dist"],
    "indentStyle": "tab",
    "indentSize": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "trailingComma": "all"
    }
  }
}
