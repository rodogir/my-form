{
	"linter": {
		"enabled": true,
		"ignore": ["dist"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"ignore": ["dist"],
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"trailingComma": "all"
		}
	}
}
